{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "declarationDir": "./dist",
    "noEmit": false,
    "rootDir": "src",
    "jsx": "react"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.json"],
  "exclude": [
    "node_modules",
    "**/*.test.*",
    "src/stories",
    "src/**/*.stories.*"
  ]
}
