{
  "name": "act-now-packages",
  "version": "1.0.0",
  "description": "NPM Packages for Act Now Coalition",
  "main": "index.js",
  "repository": "git@github.com:covid-projections/act-now-packages.git",
  "author": "Act Now Coalition",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "./packages/assert",
    "./packages/number-format",
    "./packages/time-utils",
    "./packages/regions",
    "./packages/metrics",
    "./packages/ui-components"
  ],
  "scripts": {
    "prepare": "husky install",
    "run-script": "yarn ts-node-script",
    "test": "TZ=America/Los_Angeles jest",
    "test:watch": "jest --watch",
    "test:ci": "CI=true yarn test",
    "lint": "eslint .",
    "build:all": "yarn workspaces run build",
    "release": "yarn build:all && yarn changeset publish",
    "create-package": "yarn plop package",
    "create-component": "yarn plop component",
    "generate-docs": "yarn typedoc --out public/docs --entryPointStrategy packages --excludeExternals --excludeNotDocumented --name 'Act Now Packages' .",
    "generate-storybook": "yarn build-storybook -c packages/ui-components/.storybook/ -o public/storybook",
    "build-public": "yarn build:all && yarn generate-docs && yarn generate-storybook"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --max-warnings=0",
    "*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.4",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.15.0",
    "eslint-plugin-lodash": "^7.4.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^29.2.2",
    "lint-staged": "^12.4.1",
    "lodash": "^4.17.21",
    "plop": "^3.1.0",
    "prettier": "2.6.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.0.0",
    "typedoc": "^0.23.10",
    "typescript": "^4.6.4"
  },
  "dependencies": {}
}
